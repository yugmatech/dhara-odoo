<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dhara_homepage" inherit_id="website.homepage" name="Dhara Homepage">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div class="oe_structure">
                <!-- Hero Section -->
                <section class="s_hero_dhara pt128 pb128" data-scroll-background-ratio="1">
                    <div class="container s_allow_columns">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <h1 class="display-3 mb-4">Powering Your Industry with Excellence</h1>
                                <p class="lead mb-5" style="opacity: 0.9;">Leading supplier of premium electrical switchgear, wires, motors, and automation solutions. Reliable products for your critical infrastructure.</p>
                                <div class="d-flex gap-3">
                                    <a href="/shop" class="btn btn-dhara-primary btn-lg px-5 py-3 shadow-sm">Browse Catalog</a>
                                    <a href="/contactus" class="btn btn-outline-light btn-lg px-5 py-3">Request Quote</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Featured Categories Grid -->
                <section class="s_features_grid pt64 pb64 bg-white">
                    <div class="container">
                        <div class="row mb-5">
                            <div class="col-12 text-center">
                                <h2 class="display-5 fw-bold text-dhara-navy mb-3">Our Core Products</h2>
                                <p class="text-muted">Explore our comprehensive range of electrical solutions</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <!-- Switchgear -->
                            <div class="col-lg-4 col-md-6">
                                <a href="/shop/category/switchgear" class="text-decoration-none">
                                    <div class="dhara-cat-card p-4 h-100 text-center">
                                        <div class="cat-icon mb-3">
                                            <i class="fa fa-bolt"></i>
                                        </div>
                                        <h3 class="mb-3">Switchgear</h3>
                                        <p class="text-muted small">MCBs, MCCBs, ACBs, and distribution boards for complete circuit protection.</p>
                                    </div>
                                </a>
                            </div>
                            <!-- Wires & Cables -->
                            <div class="col-lg-4 col-md-6">
                                <a href="/shop/category/wires-cables" class="text-decoration-none">
                                    <div class="dhara-cat-card p-4 h-100 text-center">
                                        <div class="cat-icon mb-3">
                                            <i class="fa fa-random"></i>
                                        </div>
                                        <h3 class="mb-3">Wires &amp; Cables</h3>
                                        <p class="text-muted small">High-grade copper/aluminum wires and armored cables for industrial use.</p>
                                    </div>
                                </a>
                            </div>
                            <!-- Motors & Pumps -->
                            <div class="col-lg-4 col-md-6">
                                <a href="/shop/category/motors-pumps" class="text-decoration-none">
                                    <div class="dhara-cat-card p-4 h-100 text-center">
                                        <div class="cat-icon mb-3">
                                            <i class="fa fa-cogs"></i>
                                        </div>
                                        <h3 class="mb-3">Motors &amp; Pumps</h3>
                                        <p class="text-muted small">Efficient motors and pumps for various industrial applications.</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Services Section -->
                <section class="dhara-service-section pt64 pb64">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-5 mb-4 mb-lg-0">
                                <h2 class="display-5 fw-bold text-dhara-navy mb-4">Expert Services &amp; Support</h2>
                                <p class="lead text-muted mb-4">Beyond products, we offer specialized services to ensure your operations run smoothly.</p>
                                <a href="/services" class="btn btn-outline-dark btn-lg">View All Services</a>
                            </div>
                            <div class="col-lg-7">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="service-icon-box h-100">
                                            <i class="fa fa-wrench"></i>
                                            <h4 class="mt-3">Installation</h4>
                                            <p class="text-muted small mb-0">Professional installation of panels and switchgear.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="service-icon-box h-100">
                                            <i class="fa fa-refresh"></i>
                                            <h4 class="mt-3">Rewinding</h4>
                                            <p class="text-muted small mb-0">Motor rewinding and repair services.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Why Choose Us / Trust Badges -->
                <section class="dhara-trust-section pt48 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3 col-6">
                                <div class="trust-item">
                                    <div class="mb-3">
                                        <i class="fa fa-file-text-o fa-3x text-dhara-orange"></i>
                                    </div>
                                    <h5>GST Invoice</h5>
                                    <p class="d-none d-md-block">Get valid input credit</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="trust-item">
                                    <div class="mb-3">
                                        <i class="fa fa-truck fa-3x text-dhara-orange"></i>
                                    </div>
                                    <h5>Fast Delivery</h5>
                                    <p class="d-none d-md-block">Pan-India shipping</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="trust-item">
                                    <div class="mb-3">
                                        <i class="fa fa-tags fa-3x text-dhara-orange"></i>
                                    </div>
                                    <h5>Best Prices</h5>
                                    <p class="d-none d-md-block">Wholesale rates</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="trust-item">
                                    <div class="mb-3">
                                        <i class="fa fa-shield fa-3x text-dhara-orange"></i>
                                    </div>
                                    <h5>Genuine Products</h5>
                                    <p class="d-none d-md-block">100% Original</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Featured Products Grid (Static Placeholder) -->
                <section class="s_product_list pt64 pb64 bg-white">
                    <div class="container">
                         <div class="row mb-5">
                            <div class="col-12 text-center">
                                <h2 class="display-5 fw-bold text-dhara-navy mb-3">Best Sellers</h2>
                                <p class="text-muted">Top-rated products chosen by our customers</p>
                            </div>
                        </div>
                        <div class="row g-4">
                            <!-- Product 1 -->
                            <div class="col-lg-3 col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <a href="/shop/product/mcb-10a-single-pole" class="text-decoration-none text-reset">
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fa fa-bolt fa-4x text-muted"></i>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">MCB 10A SP</h5>
                                            <p class="card-text text-muted small">Siemens / Schneider</p>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <span class="h5 mb-0 text-dhara-orange">₹250.00</span>
                                                <button class="btn btn-sm btn-outline-primary"><i class="fa fa-shopping-cart"></i> Add</button>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                             <!-- Product 2 -->
                            <div class="col-lg-3 col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <a href="/shop/product/2-5mm-house-wire-90m" class="text-decoration-none text-reset">
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fa fa-circle-o-notch fa-4x text-muted"></i>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">2.5mm Wire</h5>
                                            <p class="card-text text-muted small">Polycab / Havells</p>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <span class="h5 mb-0 text-dhara-orange">₹1,200.00</span>
                                                <button class="btn btn-sm btn-outline-primary"><i class="fa fa-shopping-cart"></i> Add</button>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                             <!-- Product 3 -->
                            <div class="col-lg-3 col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <a href="#" class="text-decoration-none text-reset">
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fa fa-toggle-on fa-4x text-muted"></i>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">Modular Switch</h5>
                                            <p class="card-text text-muted small">Legrand / Anchor</p>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <span class="h5 mb-0 text-dhara-orange">₹45.00</span>
                                                <button class="btn btn-sm btn-outline-primary"><i class="fa fa-shopping-cart"></i> Add</button>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                             <!-- Product 4 -->
                            <div class="col-lg-3 col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <a href="#" class="text-decoration-none text-reset">
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="fa fa-lightbulb-o fa-4x text-muted"></i>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold">LED Panel 12W</h5>
                                            <p class="card-text text-muted small">Philips / Crompton</p>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <span class="h5 mb-0 text-dhara-orange">₹350.00</span>
                                                <button class="btn btn-sm btn-outline-primary"><i class="fa fa-shopping-cart"></i> Add</button>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Top Brands Carousel -->
                <section class="s_brand_carousel dhara-brand-carousel">
                    <div class="container">
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h3 class="text-dhara-navy">Our Trusted Brands</h3>
                            </div>
                        </div>
                        <div class="row justify-content-center g-4">
                             <!-- Using Individual Images -->
                            <div class="col-6 col-md-4 col-lg-2">
                                <div class="brand-item">
                                    <img src="/yt_dhara_website/static/src/img/brands/brand_1.png" alt="Polycab" class="img-fluid"/>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2">
                                <div class="brand-item">
                                    <img src="/yt_dhara_website/static/src/img/brands/brand_2.png" alt="Schneider" class="img-fluid"/>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2">
                                <div class="brand-item">
                                    <img src="/yt_dhara_website/static/src/img/brands/brand_3.png" alt="Havells" class="img-fluid"/>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2">
                                <div class="brand-item">
                                    <img src="/yt_dhara_website/static/src/img/brands/brand_4.png" alt="Siemens" class="img-fluid"/>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2">
                                <div class="brand-item">
                                    <img src="/yt_dhara_website/static/src/img/brands/brand_5.png" alt="Legrand" class="img-fluid"/>
                                </div>
                            </div>
                            <div class="col-6 col-md-4 col-lg-2">
                                <div class="brand-item">
                                    <img src="/yt_dhara_website/static/src/img/brands/brand_6.png" alt="L&amp;T" class="img-fluid"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Testimonials -->
                <section class="dhara-testimonials pt64 pb64">
                    <div class="container">
                        <div class="row mb-5">
                            <div class="col-12 text-center">
                                <h2 class="display-5 fw-bold text-dhara-navy mb-3">What Our Clients Say</h2>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="testimonial-card h-100">
                                    <p class="fst-italic mb-3">"Dhara Enterprise is our go-to supplier for all industrial switchgear. Their delivery is always on time."</p>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-2">
                                            <h6 class="mb-0 fw-bold">Rajesh Kumar</h6>
                                            <small class="text-muted">Plant Manager, GIDC</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="testimonial-card h-100">
                                    <p class="fst-italic mb-3">"Excellent service for motor rewinding. They saved us significant downtime."</p>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-2">
                                            <h6 class="mb-0 fw-bold">Amit Patel</h6>
                                            <small class="text-muted">Facility Manager</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="testimonial-card h-100">
                                    <p class="fst-italic mb-3">"Genuine products at wholesale rates. Highly recommended for electrical contractors."</p>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-2">
                                            <h6 class="mb-0 fw-bold">Vikram Singh</h6>
                                            <small class="text-muted">Contractor</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Call to Action -->
                <section class="s_call_to_action pt64 pb64 bg-dhara-navy text-white text-center" style="background-color: #002b5c;">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <h2 class="mb-4">Ready to Upgrade Your Infrastructure?</h2>
                                <p class="lead mb-4">Contact us today for a custom quote or technical consultation.</p>
                                <a href="/contactus" class="btn btn-dhara-primary btn-lg">Contact Us Now</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>
</odoo>
