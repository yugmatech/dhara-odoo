<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categories -->
        <record id="product_category_switchgear" model="product.public.category">
            <field name="name">Switchgear</field>
        </record>
        <record id="product_category_wires" model="product.public.category">
            <field name="name">Wires &amp; Cables</field>
        </record>
        <record id="product_category_motors" model="product.public.category">
            <field name="name">Motors &amp; Pumps</field>
        </record>
        <record id="product_category_automation" model="product.public.category">
            <field name="name">Automation</field>
        </record>
        <record id="product_category_lighting" model="product.public.category">
            <field name="name">Lighting</field>
        </record>
        <record id="product_category_accessories" model="product.public.category">
            <field name="name">Accessories</field>
        </record>
        <record id="product_category_services" model="product.public.category">
            <field name="name">Services</field>
        </record>

        <!-- Sample Products -->
        <record id="product_mcb_10a" model="product.template">
            <field name="name">MCB 10A Single Pole</field>
            <field name="type">consu</field>
            <field name="is_storable">True</field>
            <field name="list_price">250.0</field>
            <field name="public_categ_ids" eval="[(4, ref('product_category_switchgear'))]"/>
            <field name="website_published">True</field>
            <field name="image_1920" type="base64" file="yt_dhara_website/static/src/img/dhara_logo.png"/>
        </record>

        <record id="product_wire_2_5mm" model="product.template">
            <field name="name">2.5mm House Wire (90m)</field>
            <field name="type">consu</field>
            <field name="is_storable">True</field>
            <field name="list_price">1200.0</field>
            <field name="public_categ_ids" eval="[(4, ref('product_category_wires'))]"/>
            <field name="website_published">True</field>
        </record>

        <!-- Services -->
        <record id="service_motor_rewinding" model="product.template">
            <field name="name">Motor Rewinding Service</field>
            <field name="type">service</field>
            <field name="list_price">0.0</field> <!-- Price on inquiry -->
            <field name="public_categ_ids" eval="[(4, ref('product_category_services'))]"/>
            <field name="website_published">True</field>
        </record>

         <record id="service_panel_installation" model="product.template">
            <field name="name">Control Panel Installation</field>
            <field name="type">service</field>
            <field name="list_price">0.0</field>
            <field name="public_categ_ids" eval="[(4, ref('product_category_services'))]"/>
            <field name="website_published">True</field>
        </record>

    </data>
</odoo>
